<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/preferenceView">

    <PreferenceCategory android:title="@string/preference_title_alarm">

        <Preference
            android:key="pref_alarm_code"
            android:summary="@string/preference_summary_security_code"
            android:title="@string/preference_title_security_code" />

        <CheckBoxPreference
            android:key="pref_fingerprint"
            android:summary="@string/pref_fingerprint_summary"
            android:title="@string/pref_fingerprint_title"
            tools:visiblity="visible"
            android:visibility="gone"/>

        <EditTextPreference
            android:key="pref_pending_time"
            android:negativeButtonText="@android:string/cancel"
            android:positiveButtonText="@android:string/ok"
            android:summary="@string/preference_summary_pending_time"
            android:title="@string/preference_title_pending_time"/>

        <EditTextPreference
            android:key="pref_delay_time"
            android:negativeButtonText="@android:string/cancel"
            android:positiveButtonText="@android:string/ok"
            android:summary="@string/pref_delay_summary"
            android:title="@string/pref_delay_title"/>

        <EditTextPreference
            android:key="pref_home_pending_time"
            android:negativeButtonText="@android:string/cancel"
            android:positiveButtonText="@android:string/ok"
            android:summary="@string/pref_home_pending_summary"
            android:title="@string/pref_home_pending_title"/>

        <EditTextPreference
            android:key="pref_away_pending_time"
            android:negativeButtonText="@android:string/cancel"
            android:positiveButtonText="@android:string/ok"
            android:summary="@string/pref_away_pending_summary"
            android:title="@string/pref_away_pending_title"/>

        <EditTextPreference
            android:key="pref_home_delay_time"
            android:negativeButtonText="@android:string/cancel"
            android:positiveButtonText="@android:string/ok"
            android:summary="@string/pref_home_delay_summary"
            android:title="@string/pref_home_delay_title"/>

        <EditTextPreference
            android:key="pref_away_delay_time"
            android:negativeButtonText="@android:string/cancel"
            android:positiveButtonText="@android:string/ok"
            android:summary="@string/pref_away_delay_summary"
            android:title="@string/pref_away_delay_title"/>

        <Preference
            android:key="pref_description"
            android:selectable="false"
            android:summary="@string/pref_pending_times_description" />

    </PreferenceCategory>

</PreferenceScreen>