<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="8dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="250dp"
            android:padding="16dp"
            android:background="@drawable/background_rounded_gray"
            android:gravity="center"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/iconImage"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:tint="@color/gray"
                tools:src="@drawable/ic_thunderstorm"/>

        <Space
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="16dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="vertical">

        <TextView
                android:id="@+id/dayText"
                style="@style/TextAppearance.TextExtraLarge"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                tools:text="MONDAY"/>

        <Space
                android:layout_width="match_parent"
                android:layout_height="4dp"/>

        <TextView
                android:id="@+id/outlookText"
                style="@style/TextAppearance.TextExtraLarge.SmallAction"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:gravity="center"
                android:ellipsize="end"
                tools:text="Light rain starting in the morning and breezy until the afternoon."/>

        <Space
                android:layout_width="match_parent"
                android:layout_height="4dp"/>

        <TextView
                android:id="@+id/temperatureText"
                style="@style/TextAppearance.TextExtraLarge.SmallAction"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                tools:text="Hi 75 L 43"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>